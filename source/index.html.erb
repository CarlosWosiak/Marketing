<section class="container pigci-container-sp text-center">
  <h2 id="pricing">Pricing</h2>
  <div class="pigci-hr pigci-hr-tail mb-8">
    <div class="left"></div>
    <div class="middle"></div>
    <div class="middle"></div>
    <div class="middle"></div>
    <div class="middle"></div>
    <div class="right"></div>
  </div>

  <div class="card-deck card-deck--pricing text-center">
    <div class="card pigci-card-sub">
      <div class="card-body">
        <h3 class="h3 mb-2">Non-Commercial<br/>Open Source</h3>
        <p class="h1 mb-2">Free</p>
        <p class="h5 mb-2">always free for public open source</p>
        <ul class="pigci-list-pricing">
          <li>quick and easy setup</li>
          <li>integrates with workflows</li>
        </ul>
      </div>
    </div>
    <div class="card pigci-card-primary">
      <div class="card-body">
        <h3 class="mb-2 h3">Commercial</h3>
        <p class="mb-2 h1">Free<br /><span class="h4">For the first 100 users</span></p>

        <p class="mb-2 h5">everything from Free tier, plus:</p>
        <ul class="pigci-list-pricing">
          <li>Special early adopter pricing</li>
          <li>includes private repos</li>
        </ul>
      </div>
    </div>
    <div class="card pigci-card-sub">
      <div class="card-body">
        <h3 class="mb-2 h3">Enterprise</h3>
        <div class="pigci-card-button mb-2">
          <%= link_to 'Contact Us', '#', class: 'btn btn-primary btn-sm' %>
        </div>
        <p class="mb-2 h5">for GitHub Enterprise users</p>
        <ul class="pigci-list-pricing">
          <li>store data on your own servers</li>
          <li>premium support</li>
        </ul>
      </div>
    </div>
  </div>
</section>

